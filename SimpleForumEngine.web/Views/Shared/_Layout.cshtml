<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav>
        <ul id="Home">
            <li><a href=@Url.Content("~/Home/Index")>Home</li>
        </ul>
        <ul>
            @if (!User.Identity.IsAuthenticated)
            {
                <li><a href=@Url.Content("~/Account/Login")>Login</a></li>
                <li><a href=@Url.Content("~/Account/Register")>Registration</a></li>
            }
            else
            {
                <li><a href=@Url.Content("~/Account/Logout")>Log out</a></li>
            }
        </ul>
    </nav>
    <header>
        <p></p>
    </header>
    <article>
        @RenderBody()
    </article>
    <footer>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/FolderCreatorOpen.js")
    @RenderSection("scripts", required: false)
</body>
</html>
